<Style xmlns="https://github.com/avaloniaui"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style.Resources>
        <Color x:Key="MainBackground">Black</Color>
        <Color x:Key="TabItemHover">#3fffffff</Color>
        <Color x:Key="TabItemSelected">#1fffffff</Color>
        <Color x:Key="SelectedSectionBackground">#222222</Color>
        <Color x:Key="ModListBackground">#1f1f1f</Color>
        <Color x:Key="PatchingOptionsBackground">#1f1f1f</Color>
        <Color x:Key="ModHover">#353535</Color>
        <ExperimentalAcrylicMaterial x:Key="MainBackgroundMaterial" TintColor="{DynamicResource MainBackground}" MaterialOpacity="0.85" TintOpacity="1" />
        <ExperimentalAcrylicMaterial x:Key="SelectedSectionBackgroundMaterial" TintColor="{DynamicResource SelectedSectionBackground}" MaterialOpacity="0.85" TintOpacity="1" />

        <ThemeVariant x:Key="ThemeVariant">Dark</ThemeVariant>
    </Style.Resources>
</Style>