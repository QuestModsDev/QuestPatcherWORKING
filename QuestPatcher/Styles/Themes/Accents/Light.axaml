<Style xmlns="https://github.com/avaloniaui"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style.Resources>
        <Color x:Key="MainBackground">White</Color>
        <Color x:Key="TabItemHover">#888888</Color>
        <Color x:Key="TabItemSelected">#1f000000</Color>
        <Color x:Key="SelectedSectionBackground">#DDDDDD</Color>
        <Color x:Key="ModListBackground">#EEEEEE</Color>
        <Color x:Key="PatchingOptionsBackground">#EEEEEE</Color>
        <Color x:Key="ModHover">#E0E0E0</Color>
        <ExperimentalAcrylicMaterial x:Key="MainBackgroundMaterial" TintColor="{DynamicResource MainBackground}" MaterialOpacity="0.85" TintOpacity="1" />
        <ExperimentalAcrylicMaterial x:Key="SelectedSectionBackgroundMaterial" TintColor="{DynamicResource SelectedSectionBackground}" MaterialOpacity="0.85" TintOpacity="1" />

        <ThemeVariant x:Key="ThemeVariant">Light</ThemeVariant>
    </Style.Resources>
</Style>